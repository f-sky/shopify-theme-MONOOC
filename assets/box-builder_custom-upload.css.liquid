.bxp-modal__container #bxp-modal__content {
    color: #000000 !important;
}

.bxp-modal__container #bxp-modal__content .bxp-modal__title,
.bxp-modal__container #bxp-modal__content #bxp-prod-info-content {
    color: #000000 !important;
}

#bxp-prod-info-content p,
#bxp-prod-info-content span {
    color: #000000 !important;
}
.bxp-bldr-submit.bxp-bldr-wizard-step {
    margin-bottom: 0px;
}
.bxp-bldr-submit.bxp-bldr-wizard-step > div.bxp-bldr-question_title{
    display: none;
}
.bxp-bldr-submit.bxp-bldr-wizard-step .bxp-bldr-box_general {
    visibility: hidden;
    height: 0px;
}
.bxp-bldr-submit.bxp-bldr-wizard-step .bxp-bldr-box_general {
    padding: 0px;
}
.bxp-bldr-submit.bxp-bldr-wizard-step .bxp-step-content > div:last-child {
    height: 0;
}


.custom-bldr_section-hero {
    position: relative;
    background-color: #ffffff;
}

.custom-bldr_section-hero:before {
    content: "";
    position: absolute;
    bottom: 0;
    left: -5%;
    width: 115%;
    height: 15%;
    background-image: url({{ 'wiggle_border_white.png' | asset_img_url: '2048x' }});
    background-size: cover;
    background-repeat: no-repeat;
}

/** -------- Box of Selected Products begin -------- */

#bxp-bldr-middle-wizard .bxp-step-box {
    position: sticky;
    top: 104px;
    z-index: 3;
    background: white;
}
.bxp-summary-container {
    pointer-events: none;
}
.bxp-summary-container:after {
    content: 'X';
    top: 0px;
    position: absolute;
    background-color: rgba(58,58,58,1);
    color: white;
    right: 0;
    font-size: 12px;
    padding: 2px 4px;
    cursor: pointer;
    /* opacity: 0.6; */
    pointer-events: all;
}

/** -------- Box of Selected Products end -------- */

#custom-bldr-upload-photo-text {
    margin-top: 30px;
    width: 100%;
}
#custom-bldr-upload-photo-text > div:last-child {
    background-color: #eceefa;
    width: 90%;
    margin: auto;
    padding-bottom: 20px;
}
#custom-bldr-upload-photo-text .custom-bldr-title h3{
    font-size: 1.625rem;
    font-weight: 400;
    text-align: center;
    margin: 10px;
}
#custom-bldr-upload-photo-text .custom-bldr-title p {
    text-align: center;
    color: #a3a3a3;
    font-style: italic;
    font-family: initial;
    font-weight: 700;
}
#custom-bldr-upload-photo-text .wrapper-tiles {
    margin: auto;
    width: 40vw;
    display: grid;
    grid-gap: 0px;
    grid-template-columns: repeat(4, 10vw);
    grid-template-rows: 10vw 10vw 10vw;
    grid-auto-flow: column;

    background-color: #f7f7f7;
    background-position: center;
    background-size: cover;
}

#custom-bldr-upload-photo-text .wrapper-tiles::after {
    content: "";
    width: 20px;
    display: inline-block;
    background-image:url(//cdn.shopify.com/s/files/1/0580/1764/4725/files/right_box.jpg?v=1632131080);
    background-position: center right;
    background-size: 5vw;
    background-repeat: no-repeat;
    height: 30vw;
}

#custom-bldr-upload-photo-text .box {
    /* background-color: #444; */
    color: #fff;
    border-radius: 0px;
    /* border: 1px solid #dcf3ed; */
    padding: 0px;
    margin: 5px;
    font-size: 150%;
}

#custom-bldr-upload-photo-text .box:nth-child(even) {
    /* background-color: #ccc; */
    color: #000;
}

#custom-bldr-upload-photo-text .box.box-custom {
    cursor: pointer;
    padding: 0px;
    margin: 5px;
    overflow-y: hidden;
    border-radius: 0px;
}
#custom-bldr-upload-photo-text .box.box-custom img {
    object-fit: cover;
    max-width: 100%;
    min-height: 100%;
}

#custom-bldr-upload-photo-text .wrapper-customized-jewelry {
    display: none;
}
#custom-bldr-upload-photo-text .wrapper-customized-jewelry.active {
    display: block;
}

/** */
.wrapper-customized-jewelry .customized-jewelry-content {
    display: none;
}
.wrapper-customized-jewelry.active .customized-jewelry-content.active {
    display: block;
}

.wrapper-customized-jewelry.active .customized-jewelry-content .product-info {
    display: flex;
}
.wrapper-customized-jewelry.active {
    margin: auto;
    padding-top: 30px;
}
.wrapper-customized-jewelry.active .customized-jewelry-content .product-info > img,
.wrapper-customized-jewelry.active .customized-jewelry-content .product-info > div {
    flex: 1 1 0;
    width: 0;
    padding: 25px;
}

.wrapper-customized-jewelry.active .customized-jewelry-content .product-info div > h3 {
    font-size: 16px;
    margin-bottom: 5px;
    font-weight: 600;
}

.wrapper-customized-jewelry.active .customized-jewelry-content .product-info div.upload-photo {
    margin: auto;
    margin-top: 10%;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60%;
    height: auto;
    font-size: 14px;

    border-radius: 50%;
    border: 3px #d9e1e6 solid;
    background-color: white;
    cursor: pointer;

    overflow: hidden;
}

.wrapper-customized-jewelry.active .customized-jewelry-content .product-info div.upload-photo:before {
    content: "";
    display: block;
    margin-top: 100%;
}
.wrapper-customized-jewelry.active .customized-jewelry-content .product-info div.upload-photo img {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.wrapper-customized-jewelry.active .customized-jewelry-content .product-info div.upload-photo span {
    color: #a3a3a3;
    font-style: italic;
    font-family: 'fontello';
    font-weight: 600;
    font-size: 12px;
}

.wrapper-giftcard-message {
    display: flex;
    /* max-width: 700px; */
    margin: auto;
    padding-top: 30px;
    background-color: #eceefa;
}
.wrapper-giftcard-message > div {
    flex: 1 1 0;
    text-align: center;
    padding: 7px;
}
.wrapper-giftcard-message > div h3 {
    font-size: 18px;
    letter-spacing: unset;
    text-transform: inherit;
    text-align: center;
    font-weight: bold;
}
.wrapper-giftcard-message > div p {
    font-size: 14px;
    font-weight: bolder;
    text-align: center;
   
}
.wrapper-giftcard-message > div:first-child p
{
    padding-top: 15px;
    line-height: 25px;
}
.wrapper-giftcard-message > div:last-child,
.wrapper-giftcard-message > div:last-child p {
    text-align: left;
    padding-top: 5px;
}
.wrapper-giftcard-message > div:last-child p span:last-child {
    padding-left: 10px;
}
.wrapper-giftcard-message > div h4 {
    font-size: 16px;
    letter-spacing: unset;
    text-transform: uppercase;
    margin-top: 20px;
}

.wrapper-giftcard-message hr {
    width: 90px; 
    height: 15px;
    position: relative;
    margin: 0 auto;
    overflow: hidden;
    border: none;
    margin-top: 25px;
    margin-bottom: 10px;
}

.wrapper-giftcard-message hr:before {
    content: "";
    
    background-image: url({{ 'underline-bundle-message.png' | asset_img_url: '100x' }});
    background-repeat: repeat-x;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
}

.wrapper-giftcard-message .wrapper-giftcard-image {
    position: relative;
    width: 75%;
    margin: auto;
}
.wrapper-giftcard-message .wrapper-giftcard-image:after {
    content: "";
    display: block;
    padding-bottom: 100%;
}
.wrapper-giftcard-image img {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 50%;
}
.wrapper-giftcard-message .wrapper-giftcard-attr_text textarea {
    height: 180px;
    background-color: white;
}
.wrapper-giftcard-attr_from,
.wrapper-giftcard-attr_delivery_to {
    display: flex;
}
.wrapper-giftcard-attr_from input,
.wrapper-giftcard-attr_delivery_to input {
    background-color: white;
    width: 50%;
}
.wrapper-giftcard-attr_from span,
.wrapper-giftcard-attr_delivery_to span {
    font-size: 22px;
    display: flex;
    align-items: center;
    font-family: 'CloisterBlack BT Regular';
    padding-left: 15px;
    font-weight: bold;
    color: #95989f;
}
